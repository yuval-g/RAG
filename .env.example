# Example environment variables for the RAG Engine
# Copy this file to .env and fill in your actual values
#
# NOTE: The RAG Engine API currently has NO AUTHENTICATION
# Variables like JWT_SECRET and API_KEY mentioned in some docs are NOT implemented

# API Server Configuration
RAG_API_HOST=0.0.0.0
RAG_API_PORT=8000
RAG_API_RELOAD=false

# General Application Configuration
RAG_ENVIRONMENT=development
RAG_CONFIG_PATH=
RAG_LOG_LEVEL=INFO
RAG_ENGINE_ENV=development
RAG_ENGINE_LOG_FILE=rag_engine.log
RAG_ENGINE_STRUCTURED_LOGS=false

# LLM Provider API Keys (REQUIRED based on your chosen provider)
GOOGLE_API_KEY=your-google-api-key-here  # Required for Google Gemini (default provider)
OPENAI_API_KEY=your-openai-api-key-here  # Only needed if using OpenAI models

# Vector Store API Keys (OPTIONAL - only needed if using these specific stores)
PINECONE_API_KEY=your-pinecone-api-key-here  # Only if using Pinecone vector store
WEAVIATE_URL=your-weaviate-url-here          # Only if using Weaviate vector store
WEAVIATE_API_KEY=your-weaviate-api-key-here  # Only if using Weaviate vector store

# Optional: Model configuration
DEFAULT_LLM_MODEL=gemini-2.0-flash-lite
DEFAULT_TEMPERATURE=0.1

# Optional: Set user agent for requests
USER_AGENT=rag-engine/1.0
